{
    "configurePresets": [
        {
            "name": "default",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "YES",
                "CMAKE_CXX_EXTENSIONS": "NO",
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "CetProvideDependency"
            }
        },
        {
            "name": "coverage",
            "inherits": "default",
            "displayName": "Coverage (GCC/Clang)",
            "description": "Enable code coverage instrumentation and reporting.",
            "cacheVariables": {
                "ENABLE_COVERAGE": "ON",
                "CMAKE_BUILD_TYPE": "Coverage",
                "CMAKE_CXX_FLAGS_COVERAGE": "-g -O0 --coverage -fprofile-arcs -ftest-coverage",
                "CMAKE_C_FLAGS_COVERAGE": "-g -O0 --coverage -fprofile-arcs -ftest-coverage",
                "CMAKE_EXE_LINKER_FLAGS_COVERAGE": "--coverage",
                "CMAKE_SHARED_LINKER_FLAGS_COVERAGE": "--coverage",
                "CMAKE_MODULE_LINKER_FLAGS_COVERAGE": "--coverage"
            }
        }
    ],
    "version": 3
}
